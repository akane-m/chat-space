.Chat-main__messages__message
  .Chat-main__messages__message__title
    .Chat-main__messages__message__title__name
      = message.user.name
    .Chat-main__messages__message__title__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Chat-main__messages__message__content-box
    - if message.content.present?
      %p.Chat-main__messages__message__content-box__content
        = message.content
    = image_tag message.image.url, class: 'Chat-main__messages__message__content-box__image' if message.image.present?